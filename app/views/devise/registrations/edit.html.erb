<body class="profile-page">
  <%= stylesheet_pack_tag 'devise_page', media: 'all', 'data-turbolinks-track': 'reload' %>
  <div class="container">
    <div class="text-center">
      <h2>プロフィール変更</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label "新しいメールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="field">
          <% if @minimum_password_length %>
            <em><%= f.label "新しいパスワード" %>(<%= @minimum_password_length %>文字以上)</em><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          <% end %>
        </div>
        <div class="field">
          <%= f.label "新しいパスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="field">
          <%= f.label "現在のパスワード" %><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "アップデート", class: "btn btn-warning btn-lg" %>
        </div>
      <% end %>
      <br>
      <%= link_to "BACK", :back, class: "btn btn-secondary" %>
    </div>
  </div>  
</body>