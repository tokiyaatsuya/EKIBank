<h1>Q5</h1>
<!--フォームに入力されたデータをDBへ保存しないので次の遷移ページにurlのパスを指定する-->
<%= form_with url: show_6_questions_path do |form| %>
  <!--questions_controllerで設定した@questions = Question.find(8)のcontentを表示する-->
  <%= @question.content %><br>
  <!--:station_atmosphereはformで渡すデータのnameを指定する。@answers_8にはAnswer.where(question_id: Q_08)が格納されている-->
  <%= form.collection_select(:station_atmosphere, @answers_8, :content, :content, {prompt: "どちらか選択してください"}) %><br>
<br>
  <%= form.submit 'NEXT' %>
<% end %>

