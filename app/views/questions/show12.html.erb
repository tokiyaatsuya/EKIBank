<h1>Q12</h1>
<h2>駅前に図書館は必須？</h2>

<%= form_for @question, url: show13_questions_path,　method: :get do |f| %>
  <div class="form-group">
    <%= f.select :library, {
      '必須': 1,
      '必須ではない': 2,
    }, { include_blank: 'どちらか選択してください' }, { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.submit 'NEXT', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
    
<%= link_to 'BACK', :back, class: 'btn btn-primary' %>
