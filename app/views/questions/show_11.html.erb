<h1>Q11</h1>
<!--フォームに入力されたデータをDBへ保存しないので次の遷移ページにurlのパスを指定する-->
<%= form_with url: show_12_questions_path do |form| %>
  <!--questions_controllerで設定した@questions = Question.find(16)のcontentを表示する-->
  <%= @question.content %><br>
  <!--:libraryはformで渡すデータのnameを指定する。@answers_16にはAnswer.where(question_id: Q_16)が格納されている-->
  <%= form.collection_select(:library, @answers_16, :content, :content, {prompt: "どちらか選択してください"}, required: true) %><br>
<br>
  <%= form.submit 'NEXT', class: "btn btn-primary" %>
<% end %>

